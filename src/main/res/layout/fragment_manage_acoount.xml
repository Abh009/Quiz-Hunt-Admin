<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    tools:context="in.teambhargavinilayam.abh.quizhuntadmin.ManageAcoountFragment">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/user_pic"
        app:layout_constraintRight_toRightOf="@+id/user_pic"
        app:layout_constraintTop_toBottomOf="@+id/user_pic"
        app:layout_constraintHorizontal_bias="0.501"
        android:id="@+id/loggedInDetails"
        android:layout_marginTop="13dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="-15dp"
            tools:layout_editor_absoluteY="200dp" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#999"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="236dp" />

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Log Out" />

    </LinearLayout>

    <ImageView
        android:id="@+id/user_pic"
        android:layout_width="93dp"
        android:layout_height="97dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/account_round"
        android:layout_marginTop="72dp"
        app:layout_constraintHorizontal_bias="0.501" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="336dp"
        android:layout_height="52dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintLeft_toLeftOf="@+id/user_pic"
        app:layout_constraintRight_toRightOf="@+id/user_pic"
        app:layout_constraintTop_toBottomOf="@+id/user_pic" />
</android.support.constraint.ConstraintLayout>

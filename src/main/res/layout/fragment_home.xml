<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:id="@+id/main_layout"
    tools:context="in.teambhargavinilayam.abh.quizhuntadmin.HomeFragment">

    <Button
        android:id="@+id/new_question"
        android:layout_width="204dp"
        android:layout_height="116dp"
        android:text="NEW QUESTION"
        android:textColor="#fff"
        android:background="#332"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/show_all_question"
        android:layout_width="204dp"
        android:layout_height="116dp"
        android:text="SHOW ALL QUESTION"
        android:textColor="#fff"
        android:background="#101"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_question"
        app:layout_constraintRight_toRightOf="@+id/new_question"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/new_question"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/delete_question"
        android:layout_width="204dp"
        android:layout_height="116dp"
        android:text="DELETE QUESTION"
        android:textColor="#fff"
        android:background="#220"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_question"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/new_question"
        app:layout_constraintTop_toBottomOf="@+id/show_all_question"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/user_name_view_main_aactivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:textAllCaps="true"
        android:background="#fff"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
